{{#partial "content"}}
    <form action="/business/new" method="post">

        <div class="form-group">
            <label for="name"> Business Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter Business name">
        </div>
        <div class="form-group">
            <label for="owner"> Owner</label>
            <input type="text" class="form-control" id="owner" name="owner" placeholder="Enter name of Owner">
        </div>
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="phone"> Business Phone Number</label>
            <input type="text" class="form-control" id="phone" name="phone" placeholder="Enter Business phone number">
        </div>

        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="category_id">Category</label>
                </div>
                <select class="custom-select" id="category_id" name="category_id">
                    <option selected>Choose...</option>


                    {{#each categories as |c|}}
                        <option name="category_id" value={{c.id}}>{{c.name}}</option>
                    {{/each}}

                </select>
            </div>
        </div>


        <div class="form-group">
            <label for="website"> Website</label>
            <input type="text" class="form-control" id="website" name="website">
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

{{/partial}}
{{> layout.hbs}}